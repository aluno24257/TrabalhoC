{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-ansi",
                "-pedantic",
                "-Wall",
                "*.c",
                "-o",
                "${fileDirname}/bin/menu",
                "-lm",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "detail": "compiler: /usr/bin/gcc"
        }
    ]
}